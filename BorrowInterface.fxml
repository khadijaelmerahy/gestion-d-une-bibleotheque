<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BorrowInterfaceController">
    <Label  text="Confirmer l'emprunt de ce livre ?" />
    <Label text="Livre : " />
    <Label fx:id="bookTitleLabel" text="" /> <!-- Pour afficher le titre du livre -->
    <Label text="Date d'emprunt :" />
    <DatePicker fx:id="dateEmpruntPicker" />
    <Label text="Date de retour :" />
   <DatePicker fx:id="dateRetourPicker" disable="true" layoutX="200.0" layoutY="100.0" />
    <Button fx:id="confirmButton" text="Confirmer" />
    <Button fx:id="cancelButton" text="Annuler" />
    
</VBox>
