<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" stylesheets="@../smartlib/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
 
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Smart Library" />
    <Label style="-fx-font-size: 18px;" text="Connexion" />
    <TextField fx:id="usernameField" promptText="Nom d'utilisateur" />
    <TextField fx:id="passwordField" promptText="Mot de passe" />
    <Button fx:id="loginButton" onAction="#handleLogin" text="Connexion" />
    <Label fx:id="errorLabel" style="-fx-text-fill: red;" text="" />
</VBox>
